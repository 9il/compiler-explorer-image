{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "access_key": "{{user `MY_ACCESS_KEY`}}",
      "secret_key": "{{user `MY_SECRET_KEY`}}",
      "source_ami": "ami-9eaa1cf6",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "gcc-explorer packer {{timestamp}}",
      "associate_public_ip_address": true,
      "iam_instance_profile": "XaniaBlog",
      "vpc_id": "vpc-17209172",
      "security_group_id": "sg-99df30fd",
      "subnet_id": "subnet-1df1e135",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda",
          "volume_size": 16,
          "delete_on_termination": true,
          "volume_type": "standard"
        }
      ]
    }
  ],

  "variables": {
    "MY_ACCESS_KEY": "",
    "MY_SECRET_KEY": "",
    "S3_ACCESS_KEY": "",
    "S3_SECRET_KEY": "",
    "PRIVATE_KEY": "",
    "PUBLIC_KEY": "",
    "DOCKER_CFG": ""
  },

  "provisioners": [
    {
      "type": "shell",
      "script": "user-data-script.sh",
      "execute_command" : "sudo sh '{{ .Path }}'",
      "environment_vars": [ 
        "PRIVATE_KEY={{user `PRIVATE_KEY`}}", 
        "PUBLIC_KEY={{user `PUBLIC_KEY`}}", 
        "DOCKER_CFG={{user `DOCKER_CFG`}}"
      ]
    }
  ]
}
