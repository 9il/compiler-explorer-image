gzip_proxied any;
gzip_http_version 1.1;
gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

server {
	listen 80 default;
	location /healthcheck {
		access_log off;
		return 200;
	}
	location / {
		deny all;
	}
}

proxy_cache_path /var/cache/nginx-gcc keys_zone=gcc:10m max_size=200m;
server {
	server_name gcc.godbolt.org;
	index index.html;

	location / {
		proxy_pass http://gcc:10240;
		proxy_cache gcc;
		proxy_cache_valid 200 2m;
	}

    location ^~ /client-options.js {
		proxy_pass http://gcc:10240;
		proxy_cache gcc;
		proxy_cache_valid 200 2m;
	}

	location ~* \.(html|js|ico|css)$ {
		root /gcc-explorer/static;
		expires max;
	}
}


server {
	server_name d.godbolt.org;
	index index.html;

	location / {
		proxy_pass http://d:10241;
		proxy_cache gcc;
		proxy_cache_valid 200 2m;
	}

    location ^~ /client-options.js {
		proxy_pass http://d:10241;
		proxy_cache gcc;
		proxy_cache_valid 200 2m;
	}

	location ~* \.(html|js|ico|css)$ {
		root /gcc-explorer/static;
		expires max;
	}
}

server {
	server_name rust.godbolt.org;
	index index.html;

	location / {
		proxy_pass http://rust:10242;
		proxy_cache gcc;
		proxy_cache_valid 200 2m;
	}

    location ^~ /client-options.js {
		proxy_pass http://rust:10242;
		proxy_cache gcc;
		proxy_cache_valid 200 2m;
	}

	location ~* \.(html|js|ico|css)$ {
		root /gcc-explorer/static;
		expires max;
	}
}

